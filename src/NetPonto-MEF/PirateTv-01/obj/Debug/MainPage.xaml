<Page
    x:Name="pageRoot"
    x:Class="PirateTv_01.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PirateTv_01"
    xmlns:common="using:PirateTv_01.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/tv-pilot.jpg" />
        </Grid.Background>
        <Canvas>

            <Rectangle Name="TVScreen"  Height="454" Width="651" 
                       Stroke="Transparent" Canvas.Left="292" Canvas.Top="210"
                       RadiusX="90" RadiusY="90"
                       >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="" />
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='1'                           Canvas.Left="994" Canvas.Top="232">
                <Button.Template>
                    <ControlTemplate>
                        <Ellipse  Name="TVChannelUp" Width="90" Height="90" 
                      Fill="Transparent"  Stroke="Transparent"
                      Canvas.Left="992" Canvas.Top="230" 
                                  RenderTransformOrigin="0.533,0.556" />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:ConnectionId='2'                             Canvas.Left="994" Canvas.Top="322">
                <Button.Template>
                    <ControlTemplate>
                        <Ellipse  Name="TVChannelDown" Width="90" Height="90" 
                            Fill="Transparent"  Stroke="Transparent"
                            Canvas.Left="994" Canvas.Top="322" RenderTransformOrigin="0.533,0.556"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBox Name="TVChannelName" Height="53" Width="150" Background="Transparent" BorderBrush="Transparent"
                       FontSize="32" Foreground="Black" 
                       TextAlignment="Center"
                       Canvas.Left="318" Canvas.Top="238" />
        </Canvas>

    </Grid>
</Page>

