<Window x:Class="PirateTV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"  Height="454" Width="651">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="./Images/tv-pilot.jpg" />
        </Grid.Background>
        <Canvas>
            <Rectangle Name="TVScreen"  Height="247" Width="303" 
                       Stroke="Transparent"
                       RadiusX="45" RadiusY="45" Canvas.Left="140" Canvas.Top="116"
                       />

            <Button Click="TVChannelUp_Click" Canvas.Left="471" Canvas.Top="129" 
                    Width="34" Height="43" Background="Transparent" BorderBrush="#00000000" Foreground="#00000000" OpacityMask="#00000000" >

            </Button>
            <Button Click="TVChannelDown_Click" Canvas.Left="471" Canvas.Top="182" 
                    Width="34" Height="40" RenderTransformOrigin="0.524,0.513" Background="Transparent" BorderBrush="#00000000" Foreground="#00000000" OpacityMask="#00000000">
            </Button>
            <TextBox Name="TVChannelName" Height="56" Width="113" Background="Transparent" BorderBrush="Transparent"
                       FontSize="20" Foreground="Black" 
                       TextAlignment="Center"
                       Canvas.Left="140" Canvas.Top="116" />
        </Canvas>

    </Grid>
</Window>
